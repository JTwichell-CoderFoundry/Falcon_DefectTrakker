@model IEnumerable<Falcon_IssueTracker.ViewModel.CustomUserData>

@{
    ViewBag.Title = "Manage Project Assignments";
}

<h2>@ViewBag.Title</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @*Left column that holds the users*@
            <div class="col">
                @Html.ListBox("UserIds")
            </div>

            @*Right column for holding my Roles*@
            <div class="col">
                @Html.ListBox("ProjectIds")
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-dark" style="width:100%;">Manage Project Assignments</button>
            </div>
        </div>
    }

</div>

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Full Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Projects")
        </th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => user.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @foreach(var projName in user.ProjectNames)
                {
                    @projName 
                    <br>
                }
            </td>
        </tr>
    }

</table>





